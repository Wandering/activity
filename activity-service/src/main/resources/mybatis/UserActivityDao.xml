<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.power.dao.UserActivityDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.power.entity.UserActivityEntity" id="userActivityMap">
        <result property="id" column="id"/>
        <result property="activityId" column="activity_id"/>
        <result property="activityName" column="activity_name"/>
        <result property="userRoles" column="user_roles"/>
        <result property="type" column="type"/>
        <result property="startDt" column="start_dt"/>
        <result property="endDt" column="end_dt"/>
    </resultMap>

	<select id="queryObject" resultType="com.power.entity.UserActivityEntity">
		select * from user_activity where id = #{value}
	</select>

	<select id="queryList" resultType="com.power.entity.UserActivityEntity">
		select * from user_activity
        <where>
			                <!--  -->
                <if test="id != null and id.trim() != ''">
                    AND id = #{id}
                </if>
			                <!-- 活动id -->
                <if test="activityId != null and activityId.trim() != ''">
                    AND activity_id = #{activityId}
                </if>
			                <!-- 活动名 -->
                <if test="activityName != null and activityName.trim() != ''">
                    AND activity_name = #{activityName}
                </if>
			                <!-- 参与活动的用户权限 -->
                <if test="userRoles != null and userRoles.trim() != ''">
                    AND user_roles = #{userRoles}
                </if>
			                <!-- 推送活动的方式 -->
                <if test="type != null and type.trim() != ''">
                    AND type = #{type}
                </if>
			                <!--  -->
                <if test="startDt != null and startDt.trim() != ''">
                    AND start_dt = #{startDt}
                </if>
			                <!--  -->
                <if test="endDt != null and endDt.trim() != ''">
                    AND end_dt = #{endDt}
                </if>
			        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from user_activity
		<where>
			                <!--  -->
                <if test="id != null and id.trim() != ''">
                    AND id = #{id}
                </if>
			                <!-- 活动id -->
                <if test="activityId != null and activityId.trim() != ''">
                    AND activity_id = #{activityId}
                </if>
			                <!-- 活动名 -->
                <if test="activityName != null and activityName.trim() != ''">
                    AND activity_name = #{activityName}
                </if>
			                <!-- 参与活动的用户权限 -->
                <if test="userRoles != null and userRoles.trim() != ''">
                    AND user_roles = #{userRoles}
                </if>
			                <!-- 推送活动的方式 -->
                <if test="type != null and type.trim() != ''">
                    AND type = #{type}
                </if>
			                <!--  -->
                <if test="startDt != null and startDt.trim() != ''">
                    AND start_dt = #{startDt}
                </if>
			                <!--  -->
                <if test="endDt != null and endDt.trim() != ''">
                    AND end_dt = #{endDt}
                </if>
			        </where> 
	</select>
	 
	<insert id="save" parameterType="com.power.entity.UserActivityEntity">
		insert into user_activity
		(
			`id`, 
			`activity_id`, 
			`activity_name`, 
			`user_roles`, 
			`type`, 
			`start_dt`, 
			`end_dt`
		)
		values
		(
			#{id}, 
			#{activityId}, 
			#{activityName}, 
			#{userRoles}, 
			#{type}, 
			#{startDt}, 
			#{endDt}
		)
	</insert>
	
	<select id="queryByTime" resultType="com.power.entity.UserActivityEntity">
		select * from user_activity
        <where>
			   
                <if test="nowTime != null and nowTime.trim() != ''">
                    start_dt &gt;=#{nowTime} 
                </if>
                <if test="nowTime !=null and nowTime!=''">
					AND end_dt &lt;=#{nowTime} 
				</if>
			        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		
	</select>
	 
	<update id="update" parameterType="com.power.entity.UserActivityEntity">
		update user_activity 
		<set>
			<if test="activityId != null">`activity_id` = #{activityId}, </if>
			<if test="activityName != null">`activity_name` = #{activityName}, </if>
			<if test="userRoles != null">`user_roles` = #{userRoles}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="startDt != null">`start_dt` = #{startDt}, </if>
			<if test="endDt != null">`end_dt` = #{endDt}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from user_activity where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from user_activity where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>