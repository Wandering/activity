<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.power.dao.UserActivityExDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.power.entity.UserActivityExEntity" id="userActivityExMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="activityId" column="activity_id"/>
        <result property="createDt" column="create_dt"/>
    </resultMap>

	<select id="queryObject" resultType="com.power.entity.UserActivityExEntity">
		select * from user_activity_ex where id = #{value}
	</select>

	<select id="queryList" resultType="com.power.entity.UserActivityExEntity">
		select * from user_activity_ex
        <where>
			                <!--  -->
                <if test="id != null and id.trim() != ''">
                    AND id = #{id}
                </if>
			                <!--  -->
                <if test="userId != null and userId.trim() != ''">
                    AND user_id = #{userId}
                </if>
			                <!--  -->
                <if test="activityId != null and activityId.trim() != ''">
                    AND activity_id = #{activityId}
                </if>
			                <!--  -->
                <if test="createDt != null and createDt.trim() != ''">
                    AND create_dt = #{createDt}
                </if>
			        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from user_activity_ex
		<where>
			                <!--  -->
                <if test="id != null and id.trim() != ''">
                    AND id = #{id}
                </if>
			                <!--  -->
                <if test="userId != null and userId.trim() != ''">
                    AND user_id = #{userId}
                </if>
			                <!--  -->
                <if test="activityId != null and activityId.trim() != ''">
                    AND activity_id = #{activityId}
                </if>
			                <!--  -->
                <if test="createDt != null and createDt.trim() != ''">
                    AND create_dt = #{createDt}
                </if>
			        </where> 
	</select>
	
	
 	<select id="queryIsUse" resultType="int">
		select count(*) from user_activity_ex
		<where>
			                <!--  -->
                <if test="userId != null and userId.trim() != ''">
                    AND user_id = #{userId}
                </if>
			                <!--  -->
                <if test="activityId != null and activityId.trim() != ''">
                    AND activity_id = #{activityId}
                </if>
			        </where> 
	</select>
	 
	<insert id="save" parameterType="com.power.entity.UserActivityExEntity">
		insert into user_activity_ex
		(
			`id`, 
			`user_id`, 
			`activity_id`, 
			`create_dt`
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{activityId}, 
			#{createDt}
		)
	</insert>
	 
	<update id="update" parameterType="com.power.entity.UserActivityExEntity">
		update user_activity_ex 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="activityId != null">`activity_id` = #{activityId}, </if>
			<if test="createDt != null">`create_dt` = #{createDt}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from user_activity_ex where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from user_activity_ex where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>